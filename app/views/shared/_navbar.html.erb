<div class="py-3 navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
  <%# Logo %>
<div class="d-flex justify-content-center align-items-center">
    <%= link_to root_path, class: "navbar-brand" do %>
    <div id="logoform" class="container">
    <span class="yellow"><strong>E</strong></span>
    <span class="yellow"><strong>x</strong></span>
    <span class="yellow"><strong>p</strong></span>
    <span class="yellow"><strong>a</strong></span>
    <span class="white"><strong>t</strong></span>
    <span class="white"><strong>u</strong></span>
    <span class="white"><strong>b</strong></span>
    <span class="white"><strong>e</strong></span>
    </div>

    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>



    <form class="d-flex search-form-control form-group ms-4" action="/events">
      <input class="form-control string required col-8" type="text" name="query" id="query" placeholder="Search by location or event title" />
      <button name="" type="submit" class="btn btn-primary col-3">
        <i class="fas fa-search"></i>
      </button>
    </div>
  </form>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "My Events", attendances_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "About", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#eventModal">
            Create event
          </button>
           </li>
          <li class="nav-item dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <% if current_user.avatar.attached? %>
                <%= cl_image_tag current_user.avatar.key, class: "avatar", alt: "dropdown menu" %>
              <% else %>
                <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", alt: "dropdown menu" %>
              <% end %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "🔐 Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="eventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="eventModalLabel">Add an Event</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="bg-white rounded p-3 mt-4 mb-4 shadow">
          <%= render "events/form", event: Event.new %>
        </div>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
