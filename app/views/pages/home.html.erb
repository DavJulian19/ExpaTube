<div class="container">
  <h2>Pick your interest</h2>
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-lg-6 mb-4">
        <%= link_to events_path(category: category.name) do %>
          <div class="card bg-dark text-white" style="width: 600px; height: 280px;">
            <!-- Replace "..." with the actual path to your image -->
            <img src="..." class="card-img" alt="Category Image" style="width: 100%; height: 100%;">
            <div class="card-img-overlay">
              <h5 class="card-title"><%= category.name %></h5>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
