
<%= simple_form_for event do |f| %>
  <%= f.input :title %>

  <%= f.association :category, collection: Category.all, prompt: 'Select a category' %>

  <%= f.input :starts_at,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>

  <%= f.input :ends_at,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>

  <%= f.input :address %>

  <%= f.input :description, as: :text %>

  <%= f.input :limit %>

  <%= f.input :photo, as: :file %>

  <%= f.button :submit, 'Create Event', class: "btn btn-primary" %>
<% end %>
