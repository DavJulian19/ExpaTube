
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Host</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body d-flex flex-column align-items-center">
        <div class="d-flex">
          <%= cl_image_tag user.avatar.key, id:"profileavatar", class: "card-img-top me-3", crop: :fill %>
          <div class="d-flex flex-column align-items-center justify-content-center">
            <p class="card-text"><%= user.bio %></p>
          </div>
        </div>
        <div class="d-flex flex-grow-1 justify-content-between my-4">
          <p class="flex-grow-1 mx-3">üìç<%= user.location %> <i class="bi bi-pin-map-fill"></i></p>
          <p class="flex-grow-1 mx-3">Let's connect!</p>
        </div>
        <div class="d-flex align-items-center justify-content-center">
          <a href='<%= user.social_media %>' target='_blank' class="card-link mx-3"><i class='fab fa-instagram'></i></a>
          <a href="https://twitter.com/username" target="_blank" class="card-link mx-3"><i class="fab fa-twitter"></i></a>
          <a href="https://www.facebook.com/username" target="_blank" class="card-link mx-3"><i class="fab fa-facebook"></i></a>
        </div>
      </div>
    </div>
  </div>
</div>
